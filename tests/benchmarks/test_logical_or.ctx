// LOGICAL OR TEST
// Tests logical OR operator (||) behavior and short-circuit evaluation

func main[] |
  print["=== LOGICAL OR TEST ==="]
  
  // Basic OR operations
  print["true || true: " + str[true || true]]
  print["true || false: " + str[true || false]]
  print["false || true: " + str[false || true]]
  print["false || false: " + str[false || false]]
  
  // OR with variables
  let a := true
  let b := false
  print["\na = true, b = false"]
  print["a || b: " + str[a || b]]
  print["b || a: " + str[b || a]]
  print["b || b: " + str[b || b]]
  print["a || a: " + str[a || a]]
  
  // OR with comparisons
  let x := 10
  let y := 5
  print["\nx = 10, y = 5"]
  print["x > 5 || y > 5: " + str[x > 5 || y > 5]]
  print["x < 5 || y > 5: " + str[x < 5 || y > 5]]
  print["x > 15 || y < 10: " + str[x > 15 || y < 10]]
  print["x < 5 || y > 10: " + str[x < 5 || y > 10]]
  
  // Chained OR operations
  print["\nChained OR:"]
  print["false || false || true: " + str[false || false || true]]
  print["true || false || false: " + str[true || false || false]]
  print["false || true || false: " + str[false || true || false]]
  print["false || false || false: " + str[false || false || false]]
  
  // OR with AND (mixed logical operators)
  print["\nMixed with AND:"]
  print["true || true && false: " + str[true || true && false]]
  print["false || true && true: " + str[false || true && true]]
  print["true && false || true: " + str[true && false || true]]
  print["false && true || false: " + str[false && true || false]]
  
  // OR with NOT
  print["\nWith NOT operator:"]
  print["!true || false: " + str[!true || false]]
  print["!false || false: " + str[!false || false]]
  print["true || !true: " + str[true || !true]]
  print["false || !false: " + str[false || !false]]
  
  // Complex expressions
  print["\nComplex expressions:"]
  let val1 := 10
  let val2 := 20
  let val3 := 5
  print["val1 = 10, val2 = 20, val3 = 5"]
  print["val1 > 15 || val2 > 15: " + str[val1 > 15 || val2 > 15]]
  print["val1 < 5 || val3 < 10: " + str[val1 < 5 || val3 < 10]]
  print["val1 == 10 || val2 == 10: " + str[val1 == 10 || val2 == 10]]
  print["val1 != 10 || val2 != 20: " + str[val1 != 10 || val2 != 20]]
  
  // OR in conditional statements
  print["\nOR in conditionals:"]
  let score := 85
  if [score >= 90 || score < 60] |
    print["Score is exceptional (A) or failing (F)"]
  ^ else |
    print["Score is in middle range (B-D)"]
  ^
  
  let age := 25
  if [age < 18 || age > 65] |
    print["Special age category"]
  ^ else |
    print["Regular age category"]
  ^
  
  // OR with equality
  print["\nOR with equality:"]
  let status := "active"
  if [status == "active" || status == "pending"] |
    print["Status is valid"]
  ^ else |
    print["Status is invalid"]
  ^
  
  // Nested OR in loops
  print["\nOR in loops:"]
  let i := 0
  while [i < 5 || i == 10] |
    print["Loop iteration: " + str[i]]
    if [i >= 4] |
      i := 11  // Exit condition
    ^ else |
      i := i + 1
    ^
  ^
  
  print["\n=== LOGICAL OR TESTS PASSED ==="]
^

main[]