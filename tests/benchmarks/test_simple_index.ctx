// SIMPLE INDEXING TEST
// Tests basic array and dictionary indexing operations

func main[] |
  print["=== SIMPLE INDEXING TEST ==="]
  
  // Array indexing with literals
  let arr := [10, 20, 30, 40, 50]
  print["Array: " + str[arr]]
  print["arr[0]: " + str[arr[0]]]
  print["arr[1]: " + str[arr[1]]]
  print["arr[2]: " + str[arr[2]]]
  print["arr[3]: " + str[arr[3]]]
  print["arr[4]: " + str[arr[4]]]
  
  // Array indexing with variables
  let idx := 2
  print["\nIndex variable idx = 2"]
  print["arr[idx]: " + str[arr[idx]]]
  
  idx := 0
  print["idx = 0, arr[idx]: " + str[arr[idx]]]
  
  idx := 4
  print["idx = 4, arr[idx]: " + str[arr[idx]]]
  
  // Array indexing with expressions
  print["\nIndexing with expressions:"]
  print["arr[1 + 1]: " + str[arr[1 + 1]]]
  print["arr[2 * 2]: " + str[arr[2 * 2]]]
  print["arr[5 - 2]: " + str[arr[5 - 2]]]
  
  // String array indexing
  let words := ["hello", "world", "cortex"]
  print["\nString array: " + str[words]]
  print["words[0]: " + str[words[0]]]
  print["words[1]: " + str[words[1]]]
  print["words[2]: " + str[words[2]]]
  
  // Mixed type array indexing
  let mixed := [1, "two", 3.0, true, null]
  print["\nMixed array: " + str[mixed]]
  print["mixed[0]: " + str[mixed[0]]]
  print["mixed[1]: " + str[mixed[1]]]
  print["mixed[2]: " + str[mixed[2]]]
  print["mixed[3]: " + str[mixed[3]]]
  print["mixed[4]: " + str[mixed[4]]]
  
  // Dictionary indexing
  let dict := {"a": 1, "b": 2, "c": 3}
  print["\nDictionary: " + str[dict]]
  print["dict['a']: " + str[dict["a"]]]
  print["dict['b']: " + str[dict["b"]]]
  print["dict['c']: " + str[dict["c"]]]
  
  // Dictionary with various value types
  let person := {"name": "Alice", "age": 30, "active": true}
  print["\nPerson dictionary: " + str[person]]
  print["person['name']: " + str[person["name"]]]
  print["person['age']: " + str[person["age"]]]
  print["person['active']: " + str[person["active"]]]
  
  // Nested array indexing
  let matrix := [[1, 2], [3, 4], [5, 6]]
  print["\nNested arrays: " + str[matrix]]
  print["matrix[0]: " + str[matrix[0]]]
  print["matrix[0][0]: " + str[matrix[0][0]]]
  print["matrix[0][1]: " + str[matrix[0][1]]]
  print["matrix[1][0]: " + str[matrix[1][0]]]
  print["matrix[2][1]: " + str[matrix[2][1]]]
  
  // Using indexed values in expressions
  print["\nUsing indexed values:"]
  let sum := arr[0] + arr[1]
  print["arr[0] + arr[1]: " + str[sum]]
  
  let product := arr[1] * arr[2]
  print["arr[1] * arr[2]: " + str[product]]
  
  print["\n=== SIMPLE INDEXING TESTS PASSED ==="]
^

main[]