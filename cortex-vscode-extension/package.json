{
    "name": "cortex-language",
    "displayName": "Cortex Language",
    "description": "Syntax highlighting and formatting for Cortex programming language",
    "version": "0.2.2",
    "publisher": "muhyadinmohamed",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/muhyadinmohamed/cortex.git"
    },
    "homepage": "https://github.com/muhyadinmohamed/cortex",
    "bugs": {
        "url": "https://github.com/muhyadinmohamed/cortex/issues"
    },
    "icon": "cortexlogo.png",
    "license": "CC-BY-NC-4.0",
    "keywords": [
        "cortex",
        "programming-language",
        "ai",
        "ml",
        "syntax-highlighting",
        "formatter"
    ],
    "contributes": {
        "languages": [
            {
                "id": "cortex",
                "aliases": [
                    "Cortex",
                    "cortex"
                ],
                "extensions": [
                    ".ctx"
                ],
                "configuration": "./language-configuration.json",
                "icon": {
                    "light": "./icons/cortex-light.svg",
                    "dark": "./icons/cortex-dark.svg"
                }
            }
        ],
        "fileExtensions": {
            ".ctx": {
                "icon": {
                    "light": "./icons/cortex-light.svg",
                    "dark": "./icons/cortex-dark.svg"
                }
            }
        },
        "grammars": [
            {
                "language": "cortex",
                "scopeName": "source.cortex",
                "path": "./syntaxes/cortex.tmLanguage.json"
            }
        ],
        "configuration": {
            "title": "Cortex",
            "properties": {
                "cortex.format.indentSize": {
                    "type": "number",
                    "default": 2,
                    "description": "Number of spaces for indentation"
                },
                "cortex.format.formatOnSave": {
                    "type": "boolean",
                    "default": true,
                    "description": "Format Cortex files on save"
                },
                "cortex.compiler.binaryPath": {
                    "type": "string",
                    "default": "",
                    "description": "Absolute path to the Cortex compiler binary (cortexc). If empty, the extension will try rust/target first, then fallback to cargo run."
                },
                "cortex.compiler.preferBinary": {
                    "type": "boolean",
                    "default": true,
                    "description": "Prefer using a compiled cortexc binary when available instead of cargo run."
                }
            }
        },
        "commands": [
            {
                "command": "cortex.format",
                "title": "Format Cortex File",
                "category": "Cortex"
            },
            {
                "command": "cortex.run",
                "title": "Run Cortex File",
                "category": "Cortex"
            },
            {
                "command": "cortex.debug",
                "title": "Debug Cortex File",
                "category": "Cortex"
            },
            {
                "command": "cortex.buildCompiler",
                "title": "Build Cortex Compiler (Rust)",
                "category": "Cortex"
            }
        ],
        "keybindings": [
            {
                "command": "cortex.format",
                "key": "ctrl+shift+f",
                "when": "editorTextFocus && editorLangId == cortex"
            },
            {
                "command": "cortex.run",
                "key": "ctrl+shift+r",
                "when": "editorTextFocus && editorLangId == cortex"
            }
        ]
    },
    "activationEvents": [
        "onLanguage:cortex",
        "onCommand:cortex.debug",
        "onCommand:cortex.buildCompiler"
    ],
    "main": "./extension.js"
}