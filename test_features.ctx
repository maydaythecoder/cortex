  return[42]
^

func test_array[] |
  let numbers := [1, 2, 3, 4, 5]
  let first := numbers[0]
  let second := numbers[1]
  
  print["First: " + first]
  print["Second: " + second]
^

func test_dict[] |
  let person := {"name": "Alice", "age": 30}
  let name := person["name"]
  let age := person["age"]
  
  print["Name: " + name]
  print["Age: " + age]
^

func test_for_loop[] |
  let i := 1
  while [i <= 5] |
    print["Count: " + i]
    let i := i + 1
  ^
^

