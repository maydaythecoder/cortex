{
    "scopeName": "source.cortex",
    "fileTypes": ["ctx"],
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#functions"
        },
        {
            "include": "#variables"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.cortex",
                    "match": "//.*$"
                },
                {
                    "name": "comment.block.cortex",
                    "begin": "/\\*",
                    "end": "\\*/"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.cortex",
                    "match": "\\b(func|let|if|else|while|for|return|main|print|str)\\b"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.cortex",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.cortex",
                            "match": "\\\\."
                        }
                    ]
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.cortex",
                    "match": "\\b\\d+\\.?\\d*\\b"
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "name": "entity.name.function.cortex",
                    "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\s*\\["
                }
            ]
        },
        "variables": {
            "patterns": [
                {
                    "name": "variable.other.cortex",
                    "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
                }
            ]
        }
    }
}
